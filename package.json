{
  "name": "next-fortress",
  "version": "0.0.0-development",
  "description": "This is a Next.js plugin that blocks, redirects, or displays a dummy page for accesses that are not authenticated.",
  "main": "./build/index.js",
  "repository": "git@github.com:aiji42/next-fortress.git",
  "author": "aiji42 <aiji42@gmail.com> (https://twitter.com/aiji42_dev)",
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./src/**/*.ts ./src/*.ts",
    "format": "yarn prettier src/*.ts src/**/*.ts --write",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "tsc && ts-add-module-exports",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "next": ">=10.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "babel-jest": "^27.0.6",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "next": "^11.0.1",
    "prettier": "^2.3.2",
    "ts-add-module-exports": "^1.0.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
